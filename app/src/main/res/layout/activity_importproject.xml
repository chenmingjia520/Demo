<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pwdVisible="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/launch2_bg"
    android:orientation="horizontal"
    tools:context=".ui.activity.ImportProjectActivity">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <TextView
            android:id="@+id/tv_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/iv_importproject"
            android:text="新建项目"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="@color/text_color_white"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@drawable/shape_corner_rect_ccc"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:background="@drawable/iv_back" />
            <EditText
                android:id="@+id/et_likename"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/iv_search"
                android:paddingRight="15dp"
                android:background="@drawable/shape_corner_rect_white"
                android:hint="请输入名称"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_black"
                android:textSize="14sp"
                android:textColorHint="@color/text_color_grey" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gv_tack_images"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="3"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:layout_marginTop="10dp">
        </GridView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Copyright © 2020-2021 Twoding All Rights Reserved"
            android:textColor="@color/text_color_grey"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>